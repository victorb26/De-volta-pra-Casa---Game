function btn(){
function fase1 (){
    var escolha = prompt ('Digite o número correspondente a sua escolha:');
    if (escolha ==1) {
        location= "./gameOverErick.html"
    } else if (escolha ==2){
        location= "./erickVoltaPraCasa2.html"
    } else {
        alert('Digite somente 1 ou 2!')
    }

}
fase1 ();
}

